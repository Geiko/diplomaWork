@using PagedList.Mvc;
@model PagedList.IPagedList<BookArt.Models.Section>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}


<div class="container-fluid wrapper_2">

    <div class="container covers ">

        @{
            int coverQuantity = Model.Count();
            int bookOnPage = 8;
            int pageQuantity = coverQuantity % bookOnPage;
            int counter = 0;

            int pageNumber = 1;
            string classes = "";


            int coverHeight = 160;
            int index = 0;
        }

        @for (int i = 0; i < 3; i++)
        {
            <div class="row">
                <div class="col-md-8">
                    <div class="leftRow">
                        @if (i == 0)
                        {
                            index = 0;
                        }
                        else if (i == 1)
                        {
                            index = 2;
                        }
                        else if (i == 2)
                        {
                            index = 5;
                        }

                        @{
                            if (counter >= coverQuantity)
                            {
                                break;
                            }

                            counter++;
                        }
                        <a href="/Project/Works/@Model.ElementAt(index).Id">
                            <div class="sectionImg">
                                <img class="shadow" alt="Cover" src="@Model.ElementAt(index).CoverUrl" height=@coverHeight />
                                <span class="sectionTitle"> @Model.ElementAt(index).Title</span>
                            </div>
                        </a>


                        @if (i == 1)
                        {
                            index = 3;
                        }
                        else if (i == 2)
                        {
                            index = 6;
                        }
                        @if (i > 0)
                        {
                            if (counter >= coverQuantity)
                            {
                                break;
                            }

                            counter++;

                            <a href="/Project/Works/@Model.ElementAt(index).Id">
                                <div class="sectionImg">
                                    <img class="marg shadow" alt="Cover" src="@Model.ElementAt(index).CoverUrl" height=@coverHeight />
                                    <span class="sectionTitle"> @Model.ElementAt(index).Title</span>
                                </div>
                            </a>
                        }
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="rightRow">
                        @if (i == 0)
                        {
                            index = 1;
                        }
                        else if (i == 1)
                        {
                            index = 4;
                        }
                        else if (i == 2)
                        {
                            index = 7;
                        }

                        @{
                            if (counter >= coverQuantity)
                            {
                                break;
                            }

                            counter++;
                        }
                        <a href="/Project/Works/@Model.ElementAt(index).Id">
                            <div class="sectionImg">
                                <img class="shadow" alt="Cover" src="@Model.ElementAt(index).CoverUrl" height=@coverHeight />
                                <span class="sectionTitle"> @Model.ElementAt(index).Title</span>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
         }


        <div class="pagination1">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>


    </div>


    @*<div class="pagination1">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>*@



