
@model IEnumerable<BookArt.Models.Section>

@{
    ViewBag.Title = "Index";
}


<div class="container-fluid wrapper_2">

    <div class="container covers ">

        @{
            int coverQuantity = Model.Count();
            int bookOnPage = 8;
            int pageQuantity = coverQuantity % bookOnPage;
            int counter = 0;

            int pageNumber = 1;
            string classes = "";


            int coverHeight = 160;
            int index = 0;
        }

        @for (int i = 0; i < 3; i++)
        {
            <div class="row">
                <div class="col-md-8">
                    <div class="leftRow">
                        @if (i == 0)
                        {
                            index = 0;
                        }
                        else if (i == 1)
                        {
                            index = 2;
                        }
                        else if (i == 2)
                        {
                            index = 5;
                        }

                        @{
                            counter++;
                            classes = $"hoverAction{counter.ToString()}";
                        }
                        <div class=@classes>
                            <img class="shadow" alt="Cover" src="@Model.ElementAt(index).CoverURL" height=@coverHeight />
                        </div>


                        @if (i == 1)
                        {
                            index = 3;
                        }
                        else if (i == 2)
                        {
                            index = 6;
                        }
                        @if (i > 0)
                        {
                        
                                counter++;
                                classes = $"hoverAction{counter.ToString()}";
                           
                                <div class=@classes>
                                    <img class="marg shadow" alt="Cover" src="@Model.ElementAt(index).CoverURL" height=@coverHeight />
                                </div>
                                }
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="rightRow">
                        @if (i == 0)
                        {
                            index = 1;
                        }
                        else if (i == 1)
                        {
                            index = 4;
                        }
                        else if (i == 2)
                        {
                            index = 7;
                        }

                        @{
                            counter++;
                            classes = $"hoverAction{counter.ToString()}";
                        }
                        <div class=@classes>
                            <img class="shadow" alt="Cover" src="@Model.ElementAt(index).CoverURL" height=@coverHeight />
                        </div>
                    </div>
                </div>
            </div>
                                }

        <div class="pagination"></div> 

    </div>

    <div class="row footer animate1">
        <p> &copy; @DateTime.Now.Year - Дніпро, Україна</p>
    </div>

</div>



@Scripts.Render("~/bundles/paginator")