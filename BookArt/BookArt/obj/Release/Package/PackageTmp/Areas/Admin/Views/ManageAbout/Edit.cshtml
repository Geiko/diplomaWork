@model BookArt.Areas.Admin.Models.AboutViewModel

@{
    ViewBag.Title = "Edit";
}

<h2 class="topPad">Про себе</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="editor-field">
        <p><b>Тут можна змінити вміст сторінки:</b></p>
        @Html.TextAreaFor(x => x.AboutContent, new
   {
       rows = "17",
       cols = "100"
   })
        @Html.ValidationMessageFor(model => model.AboutContent)
        <br /><br />

        <div class="row">
            <div class="col-md-2">
                <input type="submit" value="Відправити" class="btn btn-primary">
            </div>
            <div class="col-md-10">
                <p>@Model.Result</p>
            </div>
        </div>
    </div>
}