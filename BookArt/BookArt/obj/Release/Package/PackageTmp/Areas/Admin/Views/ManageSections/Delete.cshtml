@using BookArt.Areas.Admin.Models
@model BookArt.Areas.Admin.Models.SectionViewModel

@{
    ViewBag.Title = "Delete";
}

<h2 class="topPad">Знищити розділ</h2>

<h3>Ви впевнені, що хочете видалити це?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Section.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Section.Id)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Section.Number)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Section.Number)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Section.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Section.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Section.CoverUrl)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Section.CoverUrl)
        </dd>

    </dl>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 imgAdm">
            <img alt="Section Cover" src="@Model.Section.CoverUrl" height="110" />
        </div>
    </div>

    <div>
        <dl class="dl-horizontal">
            <dt>
                Роботи
            </dt>
            <dd>
                @Html.DropDownList(
                "works",
                Model.Works as SelectList,
                htmlAttributes: new { @class = "form-control" })
            </dd>
        </dl>
    </div>


    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Знищити" class="btn btn-default" /> |
            @Html.ActionLink("Повернутися до переліку", "Index")
        </div>
    }
</div>
