<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/cssBundle")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/d3js")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/menuActive")

</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">

            <div class="navbar-header menuDelete">
                <a href='@Url.Action("Index", "Home")'>
                    <img class="logo1" src="/Content/Images/Misc/logo_mini.jpg" alt="logo_mini" width="300" height="100" />
                </a>
            </div>

            <div class="navbar-header menuDelete">
                @Html.ActionLink("Головна", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav menuDelete" id="menuActive">
                    <li>@Html.ActionLink("Проекти", "Index", "Project")</li>
                    <li>@Html.ActionLink("Про себе", "About", "Home")</li>
                    <li>@Html.ActionLink("Написати", "Create", "Feedbacks")</li>
                </ul>

                @Html.Partial("_LoginPartial")
            </div>

        </div>
    </div>

    @RenderBody()

    <a href="#">
        <p class="footer footerToDelete">
            @*&copy; @DateTime.Now.Year - Дніпро, Україна*@
        </p>
    </a>

    @RenderSection("scripts", required: false)
</body>

</html>
