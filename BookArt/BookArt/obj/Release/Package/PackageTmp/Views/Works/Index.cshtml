@using PagedList.Mvc;
@model PagedList.IPagedList<BookArt.Models.Work>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Works";
}


<div class="container-fluid wrapper_2">

    <div class="container covers ">

        @{
            int coverQuantity = Model.Count();
            int coverHeight = 160;
            int counter = 0;
            int index = 0;
        }

        @for (int i = 0; i < 3; i++)
        {
            <div class="row">
                <div class="col-md-8">
                    <div class="leftRow">
                        @if (i == 0)
                        {
                            index = 0;
                        }
                        else if (i == 1)
                        {
                            index = 2;
                        }
                        else if (i == 2)
                        {
                            index = 5;
                        }

                        @{
                            if (counter < coverQuantity)
                            {
                                <a href="/Pages/Index/@Model.ElementAt(index).Id">
                                    <div class="sectionImg">
                                        <img class="shadow" alt="Cover"
                                             src="@Model.ElementAt(index).CoverUrl" height=@coverHeight />
                                        <span class="sectionTitle"> @Model.ElementAt(index).Name</span>
                                    </div>
                                </a>
                            }

                            counter++;
                        }


                        @if (i == 1)
                        {
                            index = 3;
                        }
                        else if (i == 2)
                        {
                            index = 6;
                        }
                        @if (i > 0)
                        {
                            if (counter < coverQuantity)
                            {
                                <a href="/Pages/Index/@Model.ElementAt(index).Id">
                                    <div class="sectionImg">
                                        <img class="marg shadow" alt="Cover"
                                             src="@Model.ElementAt(index).CoverUrl" height=@coverHeight />
                                        <span class="sectionTitle"> @Model.ElementAt(index).Name</span>
                                    </div>
                                </a>
                            }

                            counter++;
                        }
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="rightRow">
                        @if (i == 0)
                        {
                            index = 1;
                        }
                        else if (i == 1)
                        {
                            index = 4;
                        }
                        else if (i == 2)
                        {
                            index = 7;
                        }

                        @{
                            if (counter < coverQuantity)
                            {
                                <a href="/Pages/Index/@Model.ElementAt(index).Id">
                                    <div class="sectionImg">
                                        <img class="shadow" alt="Cover"
                                             src="@Model.ElementAt(index).CoverUrl" height=@coverHeight />
                                        <span class="sectionTitle"> @Model.ElementAt(index).Name</span>
                                    </div>
                                </a>
                            }

                            counter++;
                        }
                    </div>
                </div>
            </div>
        }

        <span class="breadcrumb breadCrumb">
            <a href="/Project">Проекти</a>
            > Роботи
        </span>

        <div class="sendButton backFromProject">
            <a href="javascript:history.go(-1)" class="btnPro">Попередня сторінка</a>
        </div>

    </div>

    <a href="http://bezier-svg-d3-generator.azurewebsites.net/">
        <p class="footer menuDelete">
            &copy; @DateTime.Now.Year - Дніпро, Україна
        </p>
    </a>

</div>

<div class="pagination1">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>